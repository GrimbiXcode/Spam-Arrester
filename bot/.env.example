# Telegram Bot API Token
# Get from @BotFather on Telegram
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Telegram API credentials for agent containers
# Get from https://my.telegram.org/apps
TG_API_ID=YOUR_API_ID_HERE
TG_API_HASH=YOUR_API_HASH_HERE

# Bot username (for deep links)
BOT_USERNAME=spam_arrester_bot

# Web app configuration
WEB_APP_URL=http://localhost:3000
WEB_API_PORT=3000

# Database path
DB_PATH=../data/orchestrator.db

# Docker socket path (default for Linux/macOS)
DOCKER_SOCKET=/var/run/docker.sock

# Agent Docker image
AGENT_IMAGE=spam-arrester-agent:latest

# Paths
SESSIONS_DIR=../sessions
CONFIG_DIR=../config

# Logging
LOG_LEVEL=info

# Rate limiting
MAX_CONTAINERS_PER_USER=1
AUTH_COOLDOWN_MINUTES=5

# Container resource limits
CONTAINER_CPU_LIMIT=0.5
CONTAINER_MEMORY_LIMIT=512M
